<!-- Validation failure messages -->
<% if @look.errors.any? %>
  <% @look.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Look</h3>
</div>

<%=form_for (@look), :html => {:multipart => true} do |f|%>
  <%= f.label :category, "Category" %><br>
  <%= f.text_field :category, class: 'form-control'%><br>
  <%= f.label :notes, "Notes" %><br>
  <%= f.text_field :notes, class: 'form-control'%><br>
  <%= f.label :used_on, "Occasion" %><br>
  <%= f.text_field :used_on, class: 'form-control'%><br>
  <%= f.label :selfie, "Selfie" %><br>
  <%= f.file_field :selfie, class: 'form-control' %><br>
  <%= f.submit "Create Look", class: "btn btn-success" %>
or
      <a href="/looks">Cancel</a>

  <% end %>

  </div>
</div>
