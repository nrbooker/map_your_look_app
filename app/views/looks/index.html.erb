<%if current_user %>

<div class="page-header">
  <h1>
    Total Looks / Full Facials
    <a href="/looks/new" class="btn btn-lg btn-success">Add New Look</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Category</th>
        <th>User</th>
        <th>Notes</th>
        <th>Used on</th>
        <th>Selfie</th>
        <th>Actions</th>
      </tr>

      <% @looks.each do |look| %>
      <tr>
        <td><%= look.category %></td>
        <td><%= look.user %></td>
        <td><%= look.notes %></td>
        <td><%= look.used_on %></td>
        <td><%= look.selfie %></td>
        <td>
          <a href="/looks/<%= look.id %>" class="btn btn-primary">Show</a>
          <a href="/looks/<%= look.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_look/<%= look.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<%else%>
<h1>Log in</h1>

<div class="row", id = "login_form">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :username, "Username" %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :password, "Password" %>
      <%= f.password_field :password, class: 'form-control' %>
      <br>
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>

<%end%>
