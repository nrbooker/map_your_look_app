<div class="page-header">
  <h3>Look #<%= @look.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Category</dt>
      <dd><%= @look.category %></dd>

      <dt>User</dt>
      <dd><%= @look.user_id %></dd>

      <dt>Notes</dt>
      <dd><%= @look.notes %></dd>

      <dt>Used on</dt>
      <dd><%= @look.used_on %></dd>

      <dt>Selfie</dt>
      <dd><%= image_tag(@look.selfie) %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/looks" class="btn btn-primary">
        Back
      </a>
      <a href="/looks/<%= @look.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_look/<%= @look.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<%=form_for ([@look, @eye]) do |f|%>
  <%= f.label :look, "Look" %><br>
  <%= f.collection_select :id, EyeItem.all.order(:color),:id,:color, include_blank: true %><br>
  <%= f.submit "Add Makeup", class: "btn btn-success" %>
or
  <a href="/looks">Cancel</a>
<% end %>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Store</th>
        <th>Brand</th>
        <th>Color</th>
      </tr>
      <% @eye_items.each do |item| %>
      <tr>
        <td><%= item.store%></td>
        <td><%= item.brand%></td>
        <td><%= item.color%></td>
      </tr>
      <%end%>
  </div>
</div>
