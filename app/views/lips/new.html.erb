<!-- Validation failure messages -->
<% if @lip.errors.any? %>
  <% @lip.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Lip</h3>
</div>

<div class="row">
  <div class="col-md-12">

<%=form_for (@lip), :html => {:multipart => true} do |f|%>

  <%= f.label :selfie, "Selfie" %><br>
  <%= f.file_field :selfie, class: 'form-control' %><br>
  <%= f.submit "Create Lips Look", class: "btn btn-success" %>
or
      <a href="/looks">Cancel</a>

  <% end %>

  </div>
</div>
